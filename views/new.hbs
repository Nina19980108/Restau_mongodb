<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<div class="container create-restaurant">

  <form action="/restaurant/new" method="POST">

    {{!-- 餐廳名稱 --}}
    <div class="mb-3">
      <label for="name" class="form-label">餐廳名稱</label>
      <input type="text" class="form-control" id="name" name="name" aria-describedby="name" required>
      {{!-- <div id="name" class="form-text">We'll never share your email with anyone else.</div> --}}
    </div>

    {{!-- 餐廳英文名稱 --}}
    <div class="mb-3">
      <label for="name_en" class="form-label">餐廳英文名稱</label>
      <input type="text" class="form-control" name="name_en" id="name_en" required>
    </div>

    {{!-- 類別 --}}
    <div class="mb-3">
      <label for="category">類別</label>
      <input list="categories" class="form-control" name="category" id="category" required>
      <datalist id="categories">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    {{!-- 地址 --}}
    <div class="mb-3">
      <label for="location" class="form-label">地址</label>
      <input type="text" class="form-control" name="location" id="location" required>
    </div>

    <div class="mb-3">
      <label for="google_map" class="form-label">goole map 網址</label>
      <input type="text" class="form-control" name="google_map" id="google_map" required>
    </div>

    {{!-- 電話 --}}
    <div class="mb-3">
      <label for="phone" class="form-label">電話</label>
      <input type="text" class="form-control" name="phone" id="phone" required>
    </div>

    {{!-- 簡介 --}}
    <div class="mb-3">
      <label for="description" class="form-label">簡介</label>
      <textarea type="text" class="form-control" name="description" id="description"></textarea>
    </div>

    {{!-- 儲存 --}}
    <button type="submit" class="btn btn-info">新增餐廳</button>
  </form>

</div>